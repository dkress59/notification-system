{
	"name": "multi-notification-system",
	"version": "0.0.1-alpha18",
	"description": "Notification System Web Components",
	"lint-staged": {
		"*.{scss,css}": [
			"yarn stylelint --fix --quiet"
		],
		"*.{json,js,jsx,ts,tsx}": [
			"yarn prettier --write"
		]
	},
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/core/index.umd.cjs",
	"module": "./dist/core/index.js",
	"exports": {
		".": {
			"import": "./dist/core/index.js",
			"require": "./dist/core/index.umd.cjs"
		},
		"./bundle": {
			"import": "./dist/bundle.js",
			"require": "./dist/bundle.umd.cjs"
		},
		"./dist/react": {
			"import": "./dist/react/index.js",
			"require": "./dist/react/index.umd.cjs"
		}
	},
	"scripts": {
		"build:core": "yarn vite build --emptyOutDir --config ./src/vite.config.core.ts ./src/core && tsc --project tsconfig.core.json",
		"build:react": "yarn vite build --emptyOutDir --config ./src/vite.config.react.ts ./src/react && tsc --project tsconfig.react.json",
		"build:prod": "tsc && yarn bundle && yarn build:core && yarn build:react && yarn bundle:dts",
		"bundle": "yarn vite build --emptyOutDir --config ./src/vite.config.bundle.ts ./src/core",
		"bundle:dts": "yarn dlx dts-bundle --main dist/core/index.d.ts --name multi-notification-system --out index.d.ts && yarn dlx dts-bundle --main dist/react/react/index.d.ts --name multi-notification-system/react --out ../index.d.ts",
		"dev": "yarn vite --config ./src/vite.config.core.ts ./src/core",
		"dev:react": "yarn vite --config ./src/vite.config.react.ts ./src/react",
		"check:script": "eslint --fix-dry-run .",
		"check:style": "stylelint '**/*.scss'",
		"fix:script": "eslint --fix .",
		"fix:style": "stylelint --fix --quiet '**/*.scss'",
		"test": "jest --verbose --runInBand",
		"test:watch": "jest --watchAll --runInBand",
		"postinstall": "husky install",
		"prepack": "yarn pinst --disable",
		"postpack": "yarn pinst --enable"
	},
	"license": "MIT",
	"packageManager": "yarn@3.2.4",
	"optionalDependencies": {
		"react": "^16.0.0",
		"react-dom": "^16.0.0"
	},
	"devDependencies": {
		"@babel/core": "7.19.6",
		"@babel/preset-env": "7.19.4",
		"@babel/preset-react": "7.18.6",
		"@babel/preset-typescript": "7.18.6",
		"@jest/transform": "29.2.2",
		"@jest/types": "29.2.1",
		"@testing-library/dom": "8.19.0",
		"@testing-library/jest-dom": "5.16.5",
		"@tool-belt/eslint-config": "1.3.0",
		"@types/babel__core": "7.1.19",
		"@types/babel__preset-env": "7.9.2",
		"@types/eslint": "8.4.9",
		"@types/jest": "29.2.0",
		"@types/node": "18.11.8",
		"@types/prettier": "2.7.1",
		"@types/react": "18.0.24",
		"@types/react-dom": "18.0.8",
		"@types/testing-library__jest-dom": "5.14.5",
		"@typescript-eslint/eslint-plugin": "5.41.0",
		"@typescript-eslint/parser": "5.41.0",
		"@vitejs/plugin-react": "2.2.0",
		"core-js": "3.26.0",
		"eslint": "8.26.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-import-resolver-typescript": "3.5.2",
		"eslint-plugin-eslint-comments": "3.2.0",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-jam3": "0.2.3",
		"eslint-plugin-jest": "27.1.3",
		"eslint-plugin-jsx-a11y": "6.6.1",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-react": "7.31.10",
		"eslint-plugin-simple-import-sort": "8.0.0",
		"eslint-plugin-sonarjs": "0.16.0",
		"eslint-plugin-unused-imports": "2.0.0",
		"husky": "8.0.1",
		"jest": "29.2.2",
		"jest-environment-jsdom": "29.2.2",
		"pinst": "3.0.0",
		"prettier": "2.7.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"sass": "1.55.0",
		"stylelint": "14.14.0",
		"stylelint-config-prettier-scss": "0.0.1",
		"stylelint-config-recess-order": "3.0.0",
		"stylelint-config-recommended-scss": "8.0.0",
		"stylelint-config-standard-scss": "6.0.0",
		"stylelint-csstree-validator": "2.0.0",
		"stylelint-scss": "4.3.0",
		"stylelint-selector-no-empty": "1.0.9",
		"ts-jest": "29.0.3",
		"ts-loader": "9.4.1",
		"ts-node": "10.9.1",
		"typescript": "4.8.4",
		"vite": "3.2.1"
	}
}
