{
	"name": "notification-system",
	"version": "0.0.1-alpha1",
	"description": "Notification System Web Components",
	"files": [
		"./dist/**",
		"./src/core",
		"./src/react"
	],
	"main": "./dist/core/index.js",
	"exports": {
		".": {
			"default": "./dist/core/index.js",
			"types": "./src/core/types.ts"
		},
		"./react": {
			"default": "./dist/react/index.js",
			"types": "./src/react/types.ts"
		},
		"./bundle": "./dist/core-bundle.js"
	},
	"scripts": {
		"bundle": "webpack -c ./src/webpack.config.core.ts --mode production",
		"build": "tsc --project tsconfig.build.json --outDir ./dist",
		"start": "webpack serve -c ./src/webpack.config.core.ts",
		"start:react": "webpack serve -c ./src/webpack.config.react.ts",
		"check:script": "eslint --fix-dry-run .",
		"check:style": "stylelint '**/*.scss'",
		"fix:script": "eslint --fix .",
		"fix:style": "stylelint --fix --quiet '**/*.scss'",
		"test": "jest --verbose --runInBand",
		"test:watch": "jest --watchAll --runInBand",
		"postinstall": "husky install"
	},
	"devDependencies": {
		"@jest/types": "29.1.2",
		"@testing-library/dom": "8.18.1",
		"@testing-library/jest-dom": "5.16.5",
		"@tool-belt/eslint-config": "1.2.4",
		"@types/eslint": "8.4.6",
		"@types/jest": "29.1.1",
		"@types/node": "18.7.23",
		"@types/postcss-import": "14.0.0",
		"@types/prettier": "2.7.1",
		"@types/react": "18.0.21",
		"@types/react-dom": "18.0.6",
		"@types/testing-library__jest-dom": "5.14.5",
		"@typescript-eslint/eslint-plugin": "5.38.1",
		"@typescript-eslint/parser": "5.38.1",
		"clean-webpack-plugin": "4.0.0",
		"css-loader": "6.7.1",
		"eslint": "8.24.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-import-resolver-typescript": "3.5.1",
		"eslint-plugin-eslint-comments": "3.2.0",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-jam3": "0.2.3",
		"eslint-plugin-jest": "27.0.4",
		"eslint-plugin-jsx-a11y": "6.6.1",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-react": "7.31.8",
		"eslint-plugin-simple-import-sort": "8.0.0",
		"eslint-plugin-sonarjs": "0.15.0",
		"eslint-plugin-unused-imports": "2.0.0",
		"html-webpack-plugin": "5.5.0",
		"husky": "8.0.1",
		"jest": "29.1.2",
		"jest-environment-jsdom": "29.1.2",
		"postcss": "8.4.17",
		"postcss-scss": "4.0.5",
		"prettier": "2.7.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"sass": "1.55.0",
		"sass-loader": "13.0.2",
		"stylelint": "14.13.0",
		"stylelint-config-prettier-scss": "0.0.1",
		"stylelint-config-recess-order": "3.0.0",
		"stylelint-config-recommended-scss": "7.0.0",
		"stylelint-config-standard-scss": "5.0.0",
		"stylelint-csstree-validator": "2.0.0",
		"stylelint-scss": "4.3.0",
		"stylelint-selector-no-empty": "1.0.9",
		"ts-jest": "29.0.3",
		"ts-loader": "9.4.1",
		"ts-node": "10.9.1",
		"typescript": "4.7.4",
		"webpack": "5.74.0",
		"webpack-cli": "4.10.0",
		"webpack-dev-server": "4.11.1"
	},
	"license": "MIT",
	"lint-staged": {
		"*.{scss,css}": [
			"yarn stylelint --fix --quiet"
		],
		"*.{json,js,jsx,ts,tsx}": [
			"yarn prettier --write"
		]
	}
}
