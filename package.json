{
	"name": "multi-notification-system",
	"version": "0.0.1-alpha15",
	"description": "Notification System Web Components",
	"files": [
		"./core",
		"./react",
		"./core-bundle.js",
		"./src/core",
		"./src/react"
	],
	"main": "./core/index.js",
	"scripts": {
		"bundle": "webpack -c ./src/webpack.config.bundle.ts --mode production",
		"build": "webpack -c ./src/webpack.config.build.ts --mode production",
		"build:dts": "tsc --project tsconfig.build.json",
		"start": "webpack serve -c ./src/webpack.config.bundle.ts",
		"start:react": "webpack serve -c ./src/webpack.config.build.ts",
		"check:script": "eslint --fix-dry-run .",
		"check:style": "stylelint '**/*.scss'",
		"fix:script": "eslint --fix .",
		"fix:style": "stylelint --fix --quiet '**/*.scss'",
		"test": "jest --verbose --runInBand",
		"test:watch": "jest --watchAll --runInBand",
		"postinstall": "husky install",
		"prepack": "yarn pinst --disable",
		"postpack": "yarn pinst --enable"
	},
	"devDependencies": {
		"@babel/core": "7.19.3",
