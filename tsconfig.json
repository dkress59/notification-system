{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"baseUrl": ".",
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["dom", "ESNext"],
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "ESNext",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"outDir": "dist",
		"types": ["jest", "node"]
	},
	"include": [
		"__mocks__",
		"src",
		"tests",
		".eslintrc.js",
		"jest.config.ts",
		"**/webpack.config*.ts"
	]
}
