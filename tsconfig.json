{
	"compilerOptions": {
		"isolatedModules": true,
		"skipLibCheck": false,
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"baseUrl": ".",
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["dom", "ESNext"],
		"moduleResolution": "node",
		"module": "ES2015",
		"target": "ESNext",
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"outDir": "dist",
		"types": ["jest", "node"]
	},
	"include": ["__mocks__", "src", "tests", ".eslintrc.js", "jest.config.ts"]
}
