{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"baseUrl": "./",
		"declaration": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "react",
		"jsxFactory": "h",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2017",
	},
	"include": [
		"tests",
		"src",
		".eslintrc.js",
		"babel.config.js",
		"jest.config.ts",
		"postcss.config.js",
		"tailwind.config.js",
		"setupTests.ts",
		"webpack.config*.ts",
		"notification-system/src/components/my-component",
	]
}