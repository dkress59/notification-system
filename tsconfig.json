{
	"compilerOptions": {
    "baseUrl": "./",
	  "target": "ESNext",
	  "lib": [
		"dom",
		"dom.iterable",
		"esnext"
	  ],
	  "allowJs": true,
	  "skipLibCheck": true,
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "strict": true,
	  "forceConsistentCasingInFileNames": true,
	  "noFallthroughCasesInSwitch": true,
	  "module": "commonjs",
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "noEmit": true,
	  "jsx": "react-jsx",
		"paths": {
			"@common/*": [
				"apps/_common/src/*"
			],
		}
	},
	"include": [
	  "tests",
	  "src",
	  ".eslintrc.js",
	  "babel.config.js",
	  "jest.config.ts",
	  "postcss.config.js",
	  "tailwind.config.js",
	  "setupTests.ts",
	  "webpack.config*.ts",
	]
  }
  