{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "jsx",
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "dist",
		"types": [
			"jest",
			"node"
		]
  },
  "include": [
    "__mocks__",
    "src",
    "tests",
    ".eslintrc.js",
    "babel.config.js",
    "jest.config.ts",
    "webpack.config.ts"
  ]
}